<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <!-- Header -->
  <div class="mb-8">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center gap-4">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Featured Activities</h1>
        <p class="text-gray-600">Discover popular activities and attractions from America's most iconic national parks</p>
      </div>
    </div>
  </div>

  <!-- Activities Grid -->
  <% if @activities.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @activities.each do |activity| %>
        <%= render 'shared/activity_card', activity: activity %>
      <% end %>
    </div>
    
    <!-- Info Footer -->
    <div class="mt-12 text-center">
      <div class="bg-blue-50 rounded-lg p-6 border border-blue-200">
        <h3 class="text-lg font-semibold text-blue-900 mb-2">Discover More Adventures</h3>
        <p class="text-blue-700 mb-4">These featured activities are curated from popular national parks including Yellowstone, Grand Canyon, Yosemite, Zion, and more.</p>
        <p class="text-sm text-blue-600">Click "Get New Activities" to discover different experiences and plan your next adventure!</p>
      </div>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No activities available</h3>
      <p class="mt-1 text-sm text-gray-500">Please try again later or check your internet connection.</p>
    </div>
  <% end %>
</div>
