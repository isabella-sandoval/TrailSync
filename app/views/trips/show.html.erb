<% content_for :title, "#{@trip.title} - TrailSync" %>

<div class="w-full max-w-4xl mx-auto">
  <!-- Back Navigation -->
  <div class="mb-6">
    <%= link_to trips_path, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-300" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="font-medium">Back to My Trips</span>
    <% end %>
  </div>

  <!-- Trip Header Card -->
  <div class="bg-white rounded-xl shadow-md border border-gray-100 overflow-hidden mb-6">
    <div class="bg-gradient-to-r from-blue-600 to-green-600 px-6 py-4 text-white">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center">
        <div class="flex-1">
          <h1 class="text-2xl font-bold mb-2"><%= @trip.title %></h1>
          <div class="flex items-center space-x-4 text-blue-100">
            <div class="flex items-center">
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium"><%= @trip.formatted_date %></span>
            </div>
            <span class="px-2 py-1 <%= @trip.status == 'upcoming' ? 'bg-blue-800 text-white' : 'bg-green-800 text-white' %> rounded-full text-sm font-medium">
              <%= @trip.status.capitalize %>
            </span>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <% if user_signed_in? %>
          <div class="flex space-x-2 mt-3 sm:mt-0">
            <%= link_to edit_trip_path(@trip), class: "bg-blue-800 hover:bg-blue-900 text-white px-3 py-2 rounded-lg font-medium transition duration-300 flex items-center space-x-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span>Edit</span>
            <% end %>
            
            <%= button_to @trip, method: :delete,
                  class: "bg-red-600 hover:bg-red-700 text-white px-3 py-2 rounded-lg font-medium transition duration-300 flex items-center space-x-1",
                  data: { 
                    turbo_confirm: "Are you sure you want to delete this trip? This action cannot be undone.",
                    turbo_method: :delete 
                  } do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              <span>Delete</span>
            <% end %>
          </div>
        <% else %>
          <div class="mt-3 sm:mt-0">
            <%= link_to new_user_session_path, class: "bg-white bg-opacity-20 hover:bg-opacity-30 text-white px-3 py-2 rounded-lg font-medium transition duration-300 flex items-center space-x-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
              <span>Sign In</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Trip Details -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2">
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-8">
        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
          <svg class="w-6 h-6 mr-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
          Trip Notes
        </h2>
        
        <% if @trip.notes.present? %>
          <div class="prose max-w-none">
            <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
              <p class="text-gray-700 leading-relaxed whitespace-pre-wrap"><%= @trip.notes %></p>
            </div>
          </div>
        <% else %>
          <div class="text-center py-8">
            <div class="bg-gray-100 rounded-full w-12 h-12 flex items-center justify-center mx-auto mb-3">
              <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 mb-2">No notes yet</h3>
            <p class="text-gray-600 mb-4 text-sm">Add some details about your trip to remember the experience!</p>
            <%= link_to "Add Notes", edit_trip_path(@trip), class: "bg-blue-600 text-white px-4 py-2 rounded-lg font-medium hover:bg-blue-700 transition duration-300" %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Trip Info Card -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Trip Information
        </h3>
        
        <div class="space-y-4">
          <div class="flex items-center justify-between py-2 border-b border-gray-100">
            <span class="text-gray-600 font-medium">Status</span>
            <span class="px-3 py-1 text-sm font-medium rounded-full <%= @trip.status == 'upcoming' ? 'bg-blue-600 text-white' : 'bg-green-600 text-white' %>">
              <%= @trip.status.capitalize %>
            </span>
          </div>
          
          <div class="flex items-center justify-between py-2 border-b border-gray-100">
            <span class="text-gray-600 font-medium">Date</span>
            <span class="text-gray-900 font-semibold"><%= @trip.formatted_date %></span>
          </div>
          
          <div class="flex items-center justify-between py-2 border-b border-gray-100">
            <span class="text-gray-600 font-medium">Created</span>
            <span class="text-gray-900"><%= @trip.created_at.strftime('%b %d, %Y') %></span>
          </div>
          
          <% if @trip.updated_at != @trip.created_at %>
            <div class="flex items-center justify-between py-2">
              <span class="text-gray-600 font-medium">Last Updated</span>
              <span class="text-gray-900"><%= @trip.updated_at.strftime('%b %d, %Y') %></span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Quick Actions Card -->
      <div class="bg-white rounded-xl shadow-md border border-gray-100 p-6">
        <h3 class="text-lg font-bold text-gray-900 mb-4 flex items-center">
          <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
          Quick Actions
        </h3>
        
        <div class="space-y-3">
          <% if user_signed_in? %>
            <%= link_to edit_trip_path(@trip), class: "w-full bg-blue-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-blue-700 transition duration-300 flex items-center justify-center space-x-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
              </svg>
              <span>Edit Trip</span>
            <% end %>
            
            <%= link_to new_trip_path, class: "w-full bg-green-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-green-700 transition duration-300 flex items-center justify-center space-x-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
              <span>New Trip</span>
            <% end %>
          <% else %>
            <%= link_to new_user_session_path, class: "w-full bg-blue-600 text-white px-4 py-3 rounded-lg font-medium hover:bg-blue-700 transition duration-300 flex items-center justify-center space-x-2" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
              </svg>
              <span>Sign In to Edit</span>
            <% end %>
          <% end %>
          
          <%= link_to trips_path, class: "w-full bg-gray-100 text-gray-700 px-4 py-3 rounded-lg font-medium hover:bg-gray-200 transition duration-300 flex items-center justify-center space-x-2" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16"></path>
            </svg>
            <span>All Trips</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
