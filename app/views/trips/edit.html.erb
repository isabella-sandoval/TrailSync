<% content_for :title, "Edit #{@trip.title} - TrailSync" %>

<div class="w-full max-w-2xl mx-auto">
  <!-- Back Navigation -->
  <div class="mb-6">
    <%= link_to @trip, class: "inline-flex items-center text-gray-600 hover:text-gray-900 transition duration-300" do %>
      <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
      </svg>
      <span class="font-medium">Back to Trip</span>
    <% end %>
  </div>

  <!-- Header -->
  <div class="text-center mb-6">
    <div class="bg-gradient-to-r from-blue-600 to-green-600 p-3 rounded-full w-16 h-16 flex items-center justify-center mx-auto mb-3">
      <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
      </svg>
    </div>
    <h1 class="text-2xl font-bold text-gray-900 mb-2">Edit Trip</h1>
    <p class="text-gray-600">Update your adventure details and plans</p>
  </div>

  <!-- Form Card -->
  <div class="bg-white rounded-xl shadow-lg border border-gray-100 p-8">
    <%= render "form", trip: @trip %>
    
    <div class="mt-8 pt-6 border-t border-gray-200">
      <div class="flex flex-col sm:flex-row space-y-3 sm:space-y-0 sm:space-x-3">
        <%= link_to @trip, class: "flex-1 text-center bg-gray-100 text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-200 transition duration-300" do %>
          Cancel
        <% end %>
        <%= link_to trips_path, class: "flex-1 text-center border border-gray-300 text-gray-700 px-6 py-3 rounded-lg font-medium hover:bg-gray-50 transition duration-300" do %>
          All Trips
        <% end %>
      </div>
    </div>
  </div>

  <!-- Trip Info Card -->
  <div class="mt-8 bg-gray-50 border border-gray-200 rounded-xl p-6">
    <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
      <svg class="w-5 h-5 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
      Trip Information
    </h3>
    <div class="grid grid-cols-2 gap-4 text-sm">
      <div>
        <span class="text-gray-600 font-medium">Status:</span>
        <span class="ml-2 px-2 py-1 text-xs font-medium rounded-full <%= @trip.status == 'upcoming' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %>">
          <%= @trip.status.capitalize %>
        </span>
      </div>
      <div>
        <span class="text-gray-600 font-medium">Created:</span>
        <span class="ml-2 text-gray-900"><%= @trip.created_at.strftime('%b %d, %Y') %></span>
      </div>
      <% if @trip.updated_at != @trip.created_at %>
        <div class="col-span-2">
          <span class="text-gray-600 font-medium">Last Updated:</span>
          <span class="ml-2 text-gray-900"><%= @trip.updated_at.strftime('%b %d, %Y at %I:%M %p') %></span>
        </div>
      <% end %>
    </div>
  </div>
</div>
