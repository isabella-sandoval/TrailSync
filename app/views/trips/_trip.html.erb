<div class="trip-card bg-white rounded-xl shadow-md hover:shadow-lg transition duration-300 border border-gray-100 overflow-hidden" data-status="<%= trip.status %>">
  <!-- Trip Header -->
  <div class="p-6 pb-4">
    <div class="flex justify-between items-start mb-3">
      <h3 class="text-xl font-bold text-gray-900 line-clamp-2"><%= trip.title %></h3>
      <span class="px-3 py-1 text-xs font-medium rounded-full <%= trip.status == 'upcoming' ? 'bg-blue-100 text-blue-800' : 'bg-green-100 text-green-800' %> whitespace-nowrap ml-2">
        <%= trip.status.capitalize %>
      </span>
    </div>
    
    <div class="flex items-center text-gray-600 mb-3">
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
      </svg>
      <span class="text-sm font-medium"><%= trip.formatted_date %></span>
    </div>

    <% if trip.notes.present? %>
      <p class="text-gray-600 text-sm line-clamp-3 mb-4"><%= trip.notes %></p>
    <% else %>
      <p class="text-gray-400 text-sm italic mb-4">No notes added yet</p>
    <% end %>
  </div>

  <!-- Trip Actions -->
  <div class="px-6 py-4 bg-gray-50 border-t border-gray-100">
    <% if user_signed_in? %>
      <div class="flex space-x-2">
        <%= link_to trip, class: "flex-1 text-center bg-white border border-gray-300 text-gray-700 px-3 py-2 rounded-md text-sm font-medium hover:bg-gray-50 transition duration-200", data: { turbo_frame: "_top" } do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View
        <% end %>
        
        <%= link_to edit_trip_path(trip), class: "flex-1 text-center bg-blue-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-blue-700 transition duration-200", data: { turbo_frame: "_top" } do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit
        <% end %>
        
        <%= button_to trip, method: :delete, 
              class: "flex-1 bg-red-600 text-white px-3 py-2 rounded-md text-sm font-medium hover:bg-red-700 transition duration-200",
              data: { 
                turbo_confirm: "Are you sure you want to delete this trip?",
                turbo_method: :delete,
                turbo_frame: "trips_list"
              } do %>
          <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
          </svg>
          Delete
        <% end %>
      </div>
    <% else %>
      <div class="flex justify-center">
        <%= link_to trip, class: "bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 transition duration-200 flex items-center space-x-2", data: { turbo_frame: "_top" } do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          <span>View Details</span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
