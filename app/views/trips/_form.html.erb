<%= form_with(model: trip, class: "space-y-6", data: { turbo_frame: "new_trip_form" }) do |form| %>
  <% if trip.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex items-center mb-3">
        <svg class="w-5 h-5 text-red-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <h3 class="text-red-800 font-semibold">
          <%= pluralize(trip.errors.count, "error") %> prevented this trip from being saved:
        </h3>
      </div>
      <ul class="list-disc list-inside text-red-700 space-y-1">
        <% trip.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!-- Trip Title -->
  <div class="space-y-2">
    <%= form.label :title, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
        </svg>
        Trip Title
        <span class="text-red-500 ml-1">*</span>
      </div>
    <% end %>
    <%= form.text_field :title, 
          placeholder: "e.g., Weekend Camping at Yosemite", 
          class: [
            "block w-full px-4 py-3 rounded-lg border-2 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50",
            trip.errors[:title].any? ? "border-red-300 focus:border-red-500" : "border-gray-300 focus:border-blue-500"
          ] %>
    <% if trip.errors[:title].any? %>
      <p class="text-red-600 text-sm flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= trip.errors[:title].first %>
      </p>
    <% end %>
  </div>

  <!-- Trip Date -->
  <div class="space-y-2">
    <%= form.label :date, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
        </svg>
        Trip Date
        <span class="text-red-500 ml-1">*</span>
      </div>
    <% end %>
    <%= form.date_field :date, 
          class: [
            "block w-full px-4 py-3 rounded-lg border-2 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50",
            trip.errors[:date].any? ? "border-red-300 focus:border-red-500" : "border-gray-300 focus:border-blue-500"
          ] %>
    <% if trip.errors[:date].any? %>
      <p class="text-red-600 text-sm flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= trip.errors[:date].first %>
      </p>
    <% end %>
  </div>

  <!-- Trip Notes -->
  <div class="space-y-2">
    <%= form.label :notes, class: "block text-sm font-semibold text-gray-900" do %>
      <div class="flex items-center">
        <svg class="w-4 h-4 mr-2 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
        </svg>
        Trip Notes
        <span class="text-gray-500 text-xs ml-2">(Optional)</span>
      </div>
    <% end %>
    <%= form.text_area :notes, 
          rows: 6, 
          placeholder: "Add details about your trip...\n\n• Location and destination\n• Activities planned\n• Packing list\n• Important contacts\n• Any other notes", 
          class: [
            "block w-full px-4 py-3 rounded-lg border-2 transition duration-200 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 resize-y",
            trip.errors[:notes].any? ? "border-red-300 focus:border-red-500" : "border-gray-300 focus:border-blue-500"
          ] %>
    <% if trip.errors[:notes].any? %>
      <p class="text-red-600 text-sm flex items-center">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= trip.errors[:notes].first %>
      </p>
    <% else %>
      <p class="text-gray-500 text-sm">
        Share details about your adventure - location, activities, packing lists, or anything else you want to remember!
      </p>
    <% end %>
  </div>

  <!-- Submit Button -->
  <div class="pt-4">
    <%= form.submit class: "w-full bg-gradient-to-r from-blue-600 to-green-600 hover:from-blue-700 hover:to-green-700 text-white font-semibold py-4 px-6 rounded-lg transition duration-300 transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 shadow-lg" %>
  </div>
<% end %>

<script>
  // Auto-resize textarea
  document.addEventListener('DOMContentLoaded', function() {
    const textarea = document.querySelector('textarea[name="trip[notes]"]');
    if (textarea) {
      textarea.addEventListener('input', function() {
        this.style.height = 'auto';
        this.style.height = this.scrollHeight + 'px';
      });
      
      // Initial resize
      textarea.style.height = 'auto';
      textarea.style.height = textarea.scrollHeight + 'px';
    }
  });
</script>
