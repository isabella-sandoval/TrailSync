<div class="bg-white rounded-lg shadow-md border border-gray-100 overflow-hidden hover:shadow-lg transition-shadow duration-200">
  <!-- Activity Image -->
  <% if activity['images']&.any? %>
    <div class="relative">
      <img src="<%= activity['images'].first['url'] %>" 
           alt="<%= activity['title'] %>" 
           class="w-full h-40 object-cover">
    </div>
  <% else %>
    <!-- Placeholder for activities without images -->
    <div class="w-full h-40 bg-gradient-to-br from-blue-100 to-green-100 flex items-center justify-center">
      <svg class="w-12 h-12 text-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
      </svg>
    </div>
  <% end %>

  <!-- Card Content -->
  <div class="p-4">
    <!-- Title -->
    <h3 class="font-semibold text-lg text-gray-900 mb-2 line-clamp-2">
      <%= activity['title'] %>
    </h3>

    <!-- Short Description -->
    <% if activity['shortDescription'].present? %>
      <p class="text-gray-600 text-sm mb-3 line-clamp-3">
        <%= truncate(activity['shortDescription'], length: 120) %>
      </p>
    <% end %>

    <!-- Park Information -->
    <% if activity['relatedParks']&.any? %>
      <div class="flex items-center text-sm text-gray-500 mb-3">
        <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
        </svg>
        <%= activity['relatedParks'].first['name'] %>
        <% if activity['relatedParks'].first['states'] %>
          (<%= activity['relatedParks'].first['states'] %>)
        <% end %>
      </div>
    <% end %>

    <!-- Tags/Activities -->
    <% if activity['activities']&.any? %>
      <div class="flex flex-wrap gap-1 mb-3">
        <% activity['activities'].first(3).each do |act| %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-blue-100 text-blue-800">
            <%= act['name'] %>
          </span>
        <% end %>
        <% if activity['activities'].length > 3 %>
          <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-gray-100 text-gray-600">
            +<%= activity['activities'].length - 3 %> more
          </span>
        <% end %>
      </div>
    <% end %>

    <!-- Duration and Season -->
    <div class="flex items-center justify-between text-sm text-gray-500 mb-3">
      <% if activity['duration'].present? %>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <%= activity['duration'] %>
        </div>
      <% end %>
      
      <% if activity['seasonDescription'].present? %>
        <div class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
          </svg>
          <%= truncate(activity['seasonDescription'], length: 20) %>
        </div>
      <% end %>
    </div>

    <!-- Learn More Button -->
    <% if activity['url'].present? %>
      <a href="<%= activity['url'] %>" 
         target="_blank" 
         rel="noopener noreferrer"
         class="w-full inline-flex items-center justify-center bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium py-2 px-4 rounded-lg transition duration-200">
        Learn More
        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
        </svg>
      </a>
    <% end %>
  </div>
</div>
